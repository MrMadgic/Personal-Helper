def begin():
    if pi.confirm(text='Sir,\nAre you ready?', title='Mr. Oleg, you are welcome!', buttons=['Начнём', 'Ещё не время'])=='Начнём':
        a = pi.confirm(text='Mr. Oleg, welcome home!\nI\'m Friday,\nHow can I help you?',buttons=['Почта', 'Anaconda', 'Учёба','Почта', 'Сервис', 'Учёба', 'Почта', 'Сервис', 'Учёба','Почта', 'Сервис', 'Учёба', 'Почта', 'Сервис', 'Учёба','Почта', 'Сервис', 'Учёба'])
        if a == 'Почта':
            pochta()
        elif a == 'Учёба':          #Определяем положение курсора
            pi.sleep(2)
            print(pi.position())
        elif a == 'Anaconda':           #Anaconda
            pi.moveTo(734, 1054)
            pi.leftClick()
            pi.sleep(0.5)
            pi.typewrite('Anaconda prompt')
            pi.press('enter')
            pi.sleep(3.5)
            pi.typewrite('jupyter notebook')
            pi.press('enter')
    else: pi.confirm(text='Mr. Oleg, good bye!\nI\'m Friday,\nSee you later',buttons=['Пока'])

def main():
    begin()

if __name__ == "__main__":
    main()


