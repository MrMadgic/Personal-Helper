def pochta():
    # перемещаемся на Пуск
    pi.moveTo(734, 1054)
    pi.leftClick()
    pi.sleep(0.5)
    pi.typewrite('psql')
    pi.press('enter')
    pi.sleep(1.5)
    pi.hotkey('Win', 'Up')
    pi.press('enter')
    pi.press('enter')
    pi.press('enter')
    pi.press('enter')
    pi.typewrite('123454321')
    pi.press('enter')
    pi.typewrite('psql \\! chcp 1251')
    pi.press('enter')
    pi.typewrite('\\c database1')
    pi.press('enter')
    pi.typewrite('\\d')
    pi.press('enter')
    pi.typewrite('select * from passwords where id_passwords = 0;')
    pi.typewrite('select * from passwords where id_passwords = 0;')
